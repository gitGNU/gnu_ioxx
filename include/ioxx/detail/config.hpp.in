#ifndef IOXX_DETAIL_CONFIG_HPP_INCLUDED_2008_04_20
#define IOXX_DETAIL_CONFIG_HPP_INCLUDED_2008_04_20

/**
 * The version of this library as a human-readable string.
 */
#ifndef IOXX_VERSION_STRING
#  define IOXX_VERSION_STRING "@PACKAGE_VERSION@"
#endif

/**
 * Defined to "true" if this platform supports epoll(7).
 */
#ifndef IOXX_HAVE_EPOLL
#  define IOXX_HAVE_EPOLL @IOXX_HAVE_EPOLL@
#endif

/**
 * Defined to "true" if this platform supports epoll_pwait(2).
 */
#ifndef IOXX_HAVE_EPOLL_PWAIT
#  define IOXX_HAVE_EPOLL_PWAIT @IOXX_HAVE_EPOLL_PWAIT@
#endif

/**
 * Defined to "true" if this platform supports poll(2).
 */
#ifndef IOXX_HAVE_POLL
#  define IOXX_HAVE_POLL @IOXX_HAVE_POLL@
#endif

/**
 * Defined to "true" if this platform supports ppoll(2).
 */
#ifndef IOXX_HAVE_PPOLL
#  define IOXX_HAVE_PPOLL @IOXX_HAVE_PPOLL@
#endif

/**
 * Defined to "true" if this platform supports select(2).
 */
#ifndef IOXX_HAVE_SELECT
#  define IOXX_HAVE_SELECT @IOXX_HAVE_SELECT@
#endif

/**
 * Defined to "true" if this platform supports pselect(2).
 */
#ifndef IOXX_HAVE_PSELECT
#  define IOXX_HAVE_PSELECT @IOXX_HAVE_PSELECT@
#endif

/**
 * Defined to "true" if this platform has GNU ADNS.
 */
#ifndef IOXX_HAVE_ADNS
#  define IOXX_HAVE_ADNS @IOXX_HAVE_ADNS@
#endif

namespace ioxx
{
  /**
   * The system's native socket type.
   */
  typedef int native_socket_t;
}

#endif // IOXX_DETAIL_CONFIG_HPP_INCLUDED_2008_04_20
